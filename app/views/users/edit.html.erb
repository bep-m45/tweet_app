<main>
  <h2>User Edit</h2>

<%= attachment_image_tag @user, :user_image, :fill,200, 200, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg" %>
    </div>
  <%= form_with model:@user, local:true do |f| %>
  <h4>User Imege</h4>
  <%= f.attachment_field :user_image %><br />
  <h4>Name</h4>
  <%= f.text_field :name %><br />
  <h4>Profile</h4>
  <%= f.text_area :profile_comment %><br />
  <%= f.submit 'Update' %>

  <% end %>
</main>
