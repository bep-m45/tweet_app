<main>
  <h2><i class="fas fa-users"></i>Users</h2>
  <div class="main-container">
  <% @users.each do |user| %>
    <div class="container">
      <div class="row">
        <div class="col-md-5">
          <%= link_to attachment_image_tag(user, :user_image, :fill, 200, 200, format: 'jpeg', class: "img-circle profile-img img-responsive center-block", fallback: "no_image.jpg"), user_path(user.id) %>
       </div>
       <div class="col-md-7">
  <table class="table">
    <thead>
      </thead>
    <tbody>
      <tr>
        <th>Name:</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>Profile:</th>
        <td><%= user.profile_comment %></td>
      </tr>
      </tbody>
      </table>
      </div>
      </div>
      </div>
    <% end %>
    </div>
</main>
