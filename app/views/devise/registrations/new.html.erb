<main>
  
<h2><i class="far fa-user-circle"></i>Sign Up</h2>
<div class="main-container">
<%= form_with model: @user, url: user_registration_path, id: 'new_user',class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <label>Name</label>
    <label class="control-label sr-only" for="inputName">Name</label><br/>
    <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputName" %>
  </div>
  <div class="field">
     <label>Email</label>
 <label class="control-label sr-only" for="inputEmail">Email</label><br/>
  <%= f.email_field :email, autofocus: true, class:"form-control", id:"inputEmail"  %>
 </div>
  <div class="field">
      <label>Password</label>
    <label class="control-label sr-only" for="inputPassword">password</label><br/>
    <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword" %>
  </div>
  <div class="field">
    <label>Password</label>
    <label class="control-label sr-only" for="inputConfirmPassword">Password</label><br/>
    <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", id:"inputConfirmPassword" %>
  </div>
  <div class="btn-sign">
    <button type="submit" class="btn btn-info">Sign Up</button>
  </div>
<% end %>
</div>
</main>