<main>
  <h2>Edit Tweet</h2></main>

<%= attachment_image_tag @post, :image, :fill, 60, 60, class: "img-circle pull-left profile-thumb" %>
    </div>
  <%= form_with model:@post, local:true do |f| %>
  <h4>Picture</h4>
  <%= f.attachment_field :image %><br />

  <%= f.text_area :tweet %><br />
  <%= f.submit 'Tweet' %>

  <% end %>