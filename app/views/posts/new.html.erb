<main>
  <h2>Tweet</h2>
  <%= attachment_image_tag @post, :image, :fill, 300, 350, class: "img-circle pull-left profile-thumb" %>
    </div>
  <%= form_with model:@post, local:true do |f| %>
  <h4>Picture</h4>
  <%= f.attachment_field :image %><br />

  <%= f.text_area :tweet, placeholder:"いまなにしてる？" %><br />
  <%= f.submit 'Tweet' %>

  <% end %>

</main>