<main>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
  <h2><i class="fas fa-hippo"></i>New Tweet</h2>
  <div class="main-container">
  <%= attachment_image_tag @post, :image, :fill, 300, 350, class: "img-circle pull-left profile-thumb" %>

  <%= form_with model:@post, local:true do |f| %>
  <h4>Picture</h4>
  <%= f.attachment_field :image %><br />

  <%= f.text_area :tweet, class:"form-control", placeholder:"いまなにしてる？" %><br />
  <button type="submit" class="btn"><i class="fa fa-building-o"></i>Tweet</button>

  <% end %>
</div>
</div>
</div>
</div>
</main>